        	<artifactId>spring-boot-devtools</artifactId>
    	</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		
	</dependencies>

	<build>
		<plugins>
		<!-- Not needed 
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
